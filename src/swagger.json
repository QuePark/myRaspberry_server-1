{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "MY RASPBERRY",
    "description": "MY RASPBERRY API DOCS"
  },
  "license": {
    "name": "MIT",
    "url": "https://opensource.org/licenses/MIT"
  },
  "host": "localhost:8080",
  "basePath": "/",
  "tags": [
    {
      "name": "Auth",
      "description": "Sign, 인증과 관련된 정보를 담고 있는 라우트입니다."
    },
    {
      "name": "Mypage",
      "description": "개인 정보 수정과 관련된 정보를 담고 있는 라우트입니다."
    },
    {
      "name": "Movie",
      "description": "영화 추천 / 선택과 관련된 정보를 담고 있는 라우트입니다."
    },
    {
      "name": "Search",
      "description": "영화 검색과 관련된 정보를 담고 있는 라우트입니다."
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/auth/signup": {
      "post": {
        "tags": ["Auth"],
        "summary": "회원 가입을 진행합니다",
        "requestBody": {
          "description": "Sign Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/sign"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "회원가입에 성공했습니다."
          },
          "400": {
            "description": "{message: 실패 사유를 전달합니다.}"
          },
          "500": {
            "description": "{message: '서버에 문제가 있습니다. 관리자에게 문의해주세요'}"
          }
        }
      }
    },
    "/auth/signin": {
      "post": {
        "tags": ["Auth"],
        "summary": "로그인을 진행합니다.",
        "requestBody": {
          "description": "Sign Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/sign"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "로그인 성공시 다음 유저 정보와 함께 유저 확인용 jwt를 쿠키로 전송합니다.",
            "schema": {
              "$ref": "#/definitions/userinfo"
            }
          },
          "400": {
            "description": "{message: 실패 사유를 전달합니다.}"
          },
          "500": {
            "description": "{message: '서버에 문제가 있습니다. 관리자에게 문의해주세요'}"
          }
        }
      }
    },
    "/auth/signout": {
      "get": {
        "tags": ["Auth"],
        "summary": "로그아웃을 진행합니다.",
        "responses": {
          "201": {
            "description": "로그아웃 성공시 쿠키로 발급된 토큰을 삭제하고 'you log out'메세지를 전송합니다."
          },
          "401": {
            "description": "{message: '토큰이 만료되었습니다. 다시 로그인을 진행해주세요.'}"
          },
          "403": {
            "description": "{message: '먼저 로그인을 진행해주세요'.}"
          },
          "500": {
            "description": "{message: '서버에 문제가 있습니다. 관리자에게 문의해주세요'}"
          }
        }
      }
    },
    "/auth/kakao": {
      "get": {
        "tags": ["Auth"],
        "summary": "카카오 소셜 로그인을 진행합니다.",
        "responses": {
          "200": {
            "description": "로그인 성공시 다음 유저 정보와 함께 유저 확인용 jwt를 쿠키로 전송합니다.",
            "schema": {
              "$ref": "#/definitions/userinfo"
            }
          },
          "400": {
            "description": "{message: 실패 사유를 전달합니다.}"
          },
          "500": {
            "description": "{message: '서버에 문제가 있습니다. 관리자에게 문의해주세요'}"
          }
        }
      }
    },
    "/auth/google": {
      "get": {
        "tags": ["Auth"],
        "summary": "구글 소셜 로그인을 진행합니다.",
        "responses": {
          "200": {
            "description": "로그인 성공시 다음 유저 정보와 함께 유저 확인용 jwt를 쿠키로 전송합니다.",
            "schema": {
              "$ref": "#/definitions/userinfo"
            }
          },
          "400": {
            "description": "{message: 실패 사유를 전달합니다.}"
          },
          "500": {
            "description": "{message: '서버에 문제가 있습니다. 관리자에게 문의해주세요'}"
          }
        }
      }
    },
    "/mypage/changeinfo": {
      "patch": {
        "tags": ["Mypage"],
        "summary": "유저 정보를 변경합니다.",
        "requestBody": {
          "description": "Sign Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/changeinfo"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "회원정보 변경에 성공했습니다."
          },
          "400": {
            "description": "{message: 실패 사유를 전달합니다.}"
          },
          "500": {
            "description": "{message: '서버에 문제가 있습니다. 관리자에게 문의해주세요'}"
          }
        }
      }
    },
    "/mypage/changeimage": {
      "patch": {
        "tags": ["Mypage"],
        "summary": "유저 이미지를 변경합니다.",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "img": {
                    "type": "string",
                    "description": "input name=img로 사진을 전송합니다."
                  }
                }
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "사진 변경에 성공했습니다."
          },
          "400": {
            "description": "{message: '사진 변경에 실패했습니다.'}"
          },
          "500": {
            "description": "{message: '서버에 문제가 있습니다. 관리자에게 문의해주세요'}"
          }
        }
      }
    },
    "/movie/updatetag": {
      "patch": {
        "tags": ["Movie"],
        "summary": "유저가 좋아요/ 싫어요를 누른 태그를 반영합니다.",
        "requestBody": {
          "description": "Tag Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/tag"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "ok"
          },
          "400": {
            "description": "{message: '에러 내용을 전송합니다.'}"
          },
          "500": {
            "description": "{message: '서버에 문제가 있습니다. 관리자에게 문의해주세요'}"
          }
        }
      }
    },
    "/movie/selectmovie": {
      "patch": {
        "tags": ["Movie"],
        "summary": "유저가 좋아요/ 싫어요를 누른 영화를 반영합니다.",
        "requestBody": {
          "description": "selectmovie Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/selectmovie"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "ok"
          },
          "400": {
            "description": "{message: '에러 내용을 전송합니다.'}"
          },
          "500": {
            "description": "{message: '서버에 문제가 있습니다. 관리자에게 문의해주세요'}"
          }
        }
      }
    },
    "/movie/{title}": {
      "parameters": [
        {
          "name": "title",
          "in": "path",
          "required": true,
          "description": "title은 영화 제목 입력합니다. 영화 제목으로 youtube에서 영화 관련 영상을 검색해  결과를 전송합니다.",
          "type": "string"
        }
      ],
      "get": {
        "tags": ["Movie"],
        "summary": "해당 제목으로 유튜브에서 영화를 검색해 해당 영상을 전송합니다.",
        "responses": {
          "200": {
            "description": "검색 결과를 전송합니다.",
            "schema": {
              "$ref": "#/definitions/youtubemovie"
            },
            "400": {
              "description": "{message: '에러 내용을 전송합니다.'}"
            },
            "500": {
              "description": "{message: '서버에 문제가 있습니다. 관리자에게 문의해주세요'}"
            }
          }
        }
      }
    },

    "/search/new": {
      "get": {
        "tags": ["Search"],
        "summary": "신작 영화를 분류해 점수화하여 전송합니다.",
        "responses": {
          "200": {
            "description": "개인 선호에 따라 산정된 score가 담긴 영화 객체가 배열(limit=25)에 담겨 전송됩니다. 유저별로 카운트 횟수가 저장되며, 자동으로 페이징화되어 이전 데이터 이후의 데이터가 전송됩니다.",
            "schema": {
              "$ref": "#/definitions/scoredMovie"
            },
            "400": {
              "description": "{message: '에러 내용을 전송합니다.'}"
            },
            "500": {
              "description": "{message: '서버에 문제가 있습니다. 관리자에게 문의해주세요'}"
            }
          }
        }
      }
    },

    "/search/kor": {
      "get": {
        "tags": ["Search"],
        "summary": "한국 영화를 분류해 점수화하여 전송합니다.",
        "responses": {
          "200": {
            "description": "개인 선호에 따라 산정된 score가 담긴 영화 객체가 배열(limit=25)에 담겨 전송됩니다. 유저별로 카운트 횟수가 저장되며, 자동으로 페이징화되어 이전 데이터 이후의 데이터가 전송됩니다.",
            "schema": {
              "$ref": "#/definitions/scoredMovie"
            },
            "400": {
              "description": "{message: '에러 내용을 전송합니다.'}"
            },
            "500": {
              "description": "{message: '서버에 문제가 있습니다. 관리자에게 문의해주세요'}"
            }
          }
        }
      }
    },
    "/search/eng": {
      "get": {
        "tags": ["Search"],
        "summary": "해외 영화를 분류해 점수화하여 전송합니다.",
        "responses": {
          "200": {
            "description": "개인 선호에 따라 산정된 score가 담긴 영화 객체가 배열(limit=25)에 담겨 전송됩니다. 유저별로 카운트 횟수가 저장되며, 자동으로 페이징화되어 이전 데이터 이후의 데이터가 전송됩니다.",
            "schema": {
              "$ref": "#/definitions/scoredMovie"
            },
            "400": {
              "description": "{message: '에러 내용을 전송합니다.'}"
            },
            "500": {
              "description": "{message: '서버에 문제가 있습니다. 관리자에게 문의해주세요'}"
            }
          }
        }
      }
    },
    "/search/short": {
      "get": {
        "tags": ["Search"],
        "summary": "단편 영화를 분류해 점수화하여 전송합니다.",
        "responses": {
          "200": {
            "description": "개인 선호에 따라 산정된 score가 담긴 영화 객체가 배열(limit=25)에 담겨 전송됩니다. 유저별로 카운트 횟수가 저장되며, 자동으로 페이징화되어 이전 데이터 이후의 데이터가 전송됩니다.",
            "schema": {
              "$ref": "#/definitions/scoredMovie"
            },
            "400": {
              "description": "{message: '에러 내용을 전송합니다.'}"
            },
            "500": {
              "description": "{message: '서버에 문제가 있습니다. 관리자에게 문의해주세요'}"
            }
          }
        }
      }
    },
    "/search/long": {
      "get": {
        "tags": ["Search"],
        "summary": "장편 영화를 분류해 점수화하여 전송합니다.",
        "responses": {
          "200": {
            "description": "개인 선호에 따라 산정된 score가 담긴 영화 객체가 배열(limit=25)에 담겨 전송됩니다. 유저별로 카운트 횟수가 저장되며, 자동으로 페이징화되어 이전 데이터 이후의 데이터가 전송됩니다.",
            "schema": {
              "$ref": "#/definitions/scoredMovie"
            },
            "400": {
              "description": "{message: '에러 내용을 전송합니다.'}"
            },
            "500": {
              "description": "{message: '서버에 문제가 있습니다. 관리자에게 문의해주세요'}"
            }
          }
        }
      }
    },
    "/search/title?name=${query}": {
      "parameters": [
        {
          "in": "query",
          "name": "name",
          "schema": {
            "type": "string"
          },
          "description": "타이틀명으로 영화를 검색해 정보를 전송합니다.",
          "type": "string"
        }
      ],
      "get": {
        "tags": ["Search"],
        "summary": "타이틀명으로 영화를 검색한 후 나온 결과들을 분류해 점수화하여 전송합니다.",
        "responses": {
          "200": {
            "description": "개인 선호에 따라 산정된 score가 담긴 영화 객체가 배열(limit=25)에 담겨 전송됩니다. 타이틀 검색의 경우는 페이징화 되지 않습니다.",
            "schema": {
              "$ref": "#/definitions/scoredMovie"
            },
            "400": {
              "description": "{message: '에러 내용을 전송합니다.'}"
            },
            "500": {
              "description": "{message: '서버에 문제가 있습니다. 관리자에게 문의해주세요'}"
            }
          }
        }
      }
    },
    "/search/{tagNum}": {
      "parameters": [
        {
          "name": "tagNum",
          "in": "path",
          "required": true,
          "description": "tagNum은 태그 숫자를 입력합니다. tagNum으로 영화를 검색해 결과를 전송합니다.",
          "type": "string"
        }
      ],
      "get": {
        "tags": ["Search"],
        "summary": "해당 태그의 정보와, 검색한 영화들을 분류해 점수화하여 전송합니다.",
        "responses": {
          "200": {
            "description": "해당 태그 정보와, 개인 선호에 따라 산정된 score가 담긴 영화 객체가 배열(limit=25)에 담겨 전송됩니다. tagNum 결과는 페이징되지 않습니다.",
            "schema": {
              "$ref": "#/definitions/tagSearchMovie"
            },
            "400": {
              "description": "{message: '에러 내용을 전송합니다.'}"
            },
            "500": {
              "description": "{message: '서버에 문제가 있습니다. 관리자에게 문의해주세요'}"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "userinfo": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "profileImg": {
          "type": "string"
        },
        "tag": {
          "type": "string"
        }
      }
    },
    "changeinfo": {
      "type": "object",
      "properties": {
        "password": {
          "type": "string"
        },
        "newPass": {
          "type": "string",
          "nullable": true
        },
        "newUsername": {
          "type": "string",
          "nullable": true
        }
      }
    },
    "sign": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "tagSearchMovie": {
      "type": "object",
      "properties": {
        "tagInfo": {
          "type": "object",
          "properties": {
            "id": "number",
            "category": "string",
            "name": "string"
          }
        },
        "result": {
          "schema": {
            "$ref": "#/definitions/tagSearchMovie"
          }
        }
      }
    },
    "youtubemovie": {
      "type": "object",
      "properties": {
        "searchData": "string"
      }
    },

    "scoredMovie": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": "number",
          "docid": "string",
          "title": "string",
          "titleEng": "string",
          "director": "string",
          "actor": "string",
          "plotKr": "string",
          "plotEng": "",
          "runtime": "number",
          "genre": "string",
          "image": {
            "type": "object",
            "properties": {
              "posters": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "stlls": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "tag": {
            "type": "array",
            "items": {
              "type": "number"
            }
          },
          "date": "string",
          "score": "number"
        }
      }
    },
    "tag": {
      "type": "object",
      "properties": {
        "like": {
          "type": "object",
          "properties": {
            "tagnum": {
              "type": "number"
            }
          }
        },
        "disLike": {
          "type": "object",
          "properties": {
            "tagnum": {
              "type": "number"
            }
          }
        }
      }
    },
    "selectmovie": {
      "type": "object",
      "properties": {
        "docid": "string"
      }
    }
  }
}
